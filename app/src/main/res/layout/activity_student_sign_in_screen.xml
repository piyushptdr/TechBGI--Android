<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lite_blue"
    tools:context=".activity.StudentSignInScreen">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="@dimen/_90sdp"
            android:layout_height="@dimen/_90sdp"
            android:src="@drawable/bgilogo"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_80sdp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login with"
            android:textColor="@color/dark_grey"
            android:textSize="@dimen/_25sdp"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_gravity="center"/>


        <EditText
            android:id="@+id/mobNo"
            android:layout_width="@dimen/_230sdp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_50sdp"
            android:background="@drawable/signup"
            android:fontFamily="@font/robotoregular"
            android:hint="Mob No"
            android:inputType="number"
            android:minHeight="48dp"
            android:padding="@dimen/_12sdp"
            android:textColor="@color/black" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/passwordInputLayout"
            android:layout_width="@dimen/_230sdp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_10sdp"
            app:passwordToggleEnabled="true"
            app:hintEnabled="false"
            app:boxBackgroundMode="outline">

            <EditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:fontFamily="@font/robotoregular"
                android:hint="Enter Password"
                android:background="@drawable/signup"
                android:minHeight="48dp"
                android:padding="@dimen/_12sdp"
                android:textColor="@color/black" />

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/forgotPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_160sdp"
            android:layout_marginTop="@dimen/_3sdp"
            android:textColor="@color/dark_grey"
            android:textSize="@dimen/_14sdp"
            android:text="Forget Password?"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/signInBtn"
            android:layout_width="@dimen/_230sdp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/abhayalibrebold"
            android:text="Sign In"
            android:textSize="@dimen/_15ssp"
            android:textColor="#FFFFFF"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_gravity="center"
            android:shadowColor="@color/black"
            android:shadowDx="4"
            android:shadowDy="5"
            android:shadowRadius="4"
            android:elevation="@dimen/_10sdp"
            android:background="@drawable/front_button"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="@dimen/_30sdp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/dark_grey"
                android:textSize="@dimen/_14sdp"
                android:text="Create new Registration?"/>

            <TextView
                android:id="@+id/signup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="SignUP"
                android:layout_marginStart="@dimen/_2sdp"
                android:textStyle="bold"
                android:textSize="@dimen/_14sdp"
                android:layout_marginEnd="@dimen/_2sdp"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
